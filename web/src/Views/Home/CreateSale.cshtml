@model CreateSaleViewModel;

@{
    ViewData["Title"] = "Create Sale";
}

<h1 class="display-4">Create Sale</h1>

<div>@Model.SaleId</div>

<form asp-action="CreateSale">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="SaleId" />
    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Price" class="control-label"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>

@if (@Model.TransactionHash != null)
{
    <div>Proceed to <a asp-action="BuyerDeposit" asp-route-id="@Model.SaleId">Buyer Depost</a></div>
    <div>View Application Log: <a asp-action="AppLog" asp-route-id="@Model.TransactionHash">@Model.TransactionHash</a></div>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}