            "checkpoint": "${workspaceFolder}/checkpoints/2-create-sale.neoxp-checkpoint",
            "invocation": {
                "operation": "sales",
                "args": [
                    "@seller"
                ]
            },
            "signers": [
                "@buyer"
            ]
        },
