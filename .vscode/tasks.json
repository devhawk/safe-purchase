{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "build",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "group": "build",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "run create-sale checkpoint",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "nxp3",
                "checkpoint",
                "run",
                "${workspaceFolder}/checkpoints/create-sale.nxp3-checkpoint"
            ],
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": []
        }
    ]
}